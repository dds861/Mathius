<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"


    android:layout_height="match_parent"
    tools:context="com.mathius.dd.mathius.FragmentStage1">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/levelCurrent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_timer" />

                <TextView
                    android:id="@+id/tv_timer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"

                    android:textColor="@color/textColor"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_equation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"

            android:textColor="@color/textColor"
            android:textSize="50sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@mipmap/ic_incorrect" />

            <TextView
                android:id="@+id/tv_incorrect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center_horizontal|center_vertical"
                android:text="0"

                android:textColor="@color/incorrectAnswer"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@mipmap/ic_correct" />

            <TextView
                android:id="@+id/tv_correct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="center_horizontal|center_vertical"
                android:text="0"
                android:textColor="@color/correctAnswer"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_answer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:lines="1"
                android:text="0"
                android:textColor="@color/textColor"
                android:textSize="40sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn7"
                    style="@style/buttons"
                    android:background="@drawable/btn_shape"
                    android:text="7" />

                <Button
                    android:id="@+id/btn8"
                    style="@style/buttons"
                    android:background="@drawable/btn_shape"
                    android:text="8" />

                <Button
                    android:id="@+id/btn9"
                    style="@style/buttons"
                    android:background="@drawable/btn_shape"
                    android:text="9" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn4"
                    style="@style/buttons"
                    android:background="@drawable/btn_shape"
                    android:text="4" />

                <Button
                    android:id="@+id/btn5"
                    style="@style/buttons"
                    android:background="@drawable/btn_shape"
                    android:text="5" />

                <Button
                    android:id="@+id/btn6"
                    style="@style/buttons"
                    android:background="@drawable/btn_shape"
                    android:text="6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    style="@style/buttons"
                    android:background="@drawable/btn_shape"
                    android:text="1" />

                <Button
                    android:id="@+id/btn2"
                    style="@style/buttons"
                    android:background="@drawable/btn_shape"
                    android:text="2" />

                <Button
                    android:id="@+id/btn3"
                    style="@style/buttons"
                    android:background="@drawable/btn_shape"
                    android:text="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btn0"
                    style="@style/buttons"
                    android:background="@drawable/btn_shape"

                    android:text="0" />

                <Button
                    android:id="@+id/btnC"
                    style="@style/buttons"
                    android:layout_weight="2"
                    android:background="@drawable/btn_shape"
                    android:text="C" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAnswer"
                    style="@style/buttons"
                    android:background="@drawable/btn_shape"
                    android:drawableRight="@mipmap/ic_enterr"
                    android:text="@string/answer" />

                <Button
                    android:id="@+id/btnDelete"
                    style="@style/buttons"
                    android:layout_weight="2"
                    android:background="@drawable/btn_shape"
                    android:text="@string/delete" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>
